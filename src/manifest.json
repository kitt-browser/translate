{
  "manifest_version": 2,
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "<%= version %>",
  "icons": {
    "128": "img/appIcon.png"
  },
  "background": {
    "scripts": [
      "js/main.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/vendor/jquery-ui-scalebreaker/iscroll-lite.js",
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "storage"
  ],
  "web_accessible_resources": [
    "img/*",
    "notification.html",
    "auth.html"
  ]
}
